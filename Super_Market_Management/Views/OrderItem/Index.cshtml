@model List<Super_Market_Management.Models.OrderItem>
@{
    ViewData["Title"] = "Order Items";
    var order = Model.FirstOrDefault()?.Order;
    var totalItems = Model.Sum(oi => oi.ProductQuantity);
    var subtotal = Model.Sum(oi => oi.QuantityWisePrice);
}

<div class="container-fluid">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="bi bi-cart-check text-primary"></i> Order Details
            </h1>
            @if (order != null)
            {
                <div class="d-flex gap-3 mt-2">
                    <div>
                        <span class="text-muted">Order #:</span>
                        <strong>@order.OrderNumber</strong>
                    </div>
                    <div>
                        <span class="text-muted">Date:</span>
                        <strong>@order.OrderDate.ToString("d")</strong>
                    </div>
                    <div>
                        <span class="text-muted">Status:</span>
                        <span class="badge bg-@(order.Status == "Completed" ? "success" :order.Status == "Pending" ? "warning" : "secondary")">
                        @order.Status
                    </span>
                </div>
            </div>
                        }
        </div>
        <div>
            <a asp-controller="Order" asp-action="GetAllOrder" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Customer Information</h5>
        </div>
        <div class="card-body">
            @if (order?.Customer != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <p class="mb-1"><strong>Name:</strong> @order.Customer.Name</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-1"><strong>Email:</strong> @order.Customer.Email</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-1"><strong>Phone:</strong> @order.Customer.PhoneNumber</p>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">No customer information available</p>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Order Items</h5>
                <span class="badge bg-primary">@totalItems items</span>
            </div>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x text-muted fs-1"></i>
                    <h4 class="mt-3">No Items Found</h4>
                    <p class="text-muted">This order doesn't contain any items</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 40%">Product</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Total</th>
                                <th>Added By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@item.Product?.ProductImage1"
                                                 alt="@item.Product?.ProductName"
                                                 class="img-thumbnail me-3"
                                                 style="width: 60px; height: 60px; object-fit: cover;" />
                                            <div>
                                                <div class="fw-bold">@item.Product?.ProductName</div>
                                                <div class="text-muted small">
                                                    SKU: @item.Product?.Sku
                                                    @if (!string.IsNullOrEmpty(item.Product?.Barcode))
                                                    {
                                                        <span> | Barcode: @item.Product?.Barcode</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.ProductQuantity</td>
                                    <td class="text-end">₹ @item.Product?.ProductPrice.ToString("0.00")</td>
                                    <td class="text-end">₹ @item.QuantityWisePrice.ToString("0.00")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                <i class="bi bi-person-circle"></i>
                                            </div>
                                            <div>
                                                <div>@item.User?.UserName</div>
                                                <small class="text-muted">@item.CreationDate?.ToString("g")</small>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        @if (order != null && Model.Any())
        {
            <div class="card-footer">
                <div class="row justify-content-end">
                    <div class="col-md-4">
                        <table class="table table-sm">
                            <tr>
                                <th>Subtotal:</th>
                                <td class="text-end">₹ @subtotal.ToString("0.00")</td>
                            </tr>
                            <tr>
                                <th>Tax (@order.TaxAmount.ToString("0.00")):</th>
                                <td class="text-end">₹ @order.TaxAmount.ToString("0.00")</td>
                            </tr>
                            <tr>
                                <th>Discount:</th>
                                <td class="text-end">-₹ @order.DiscountAmount.ToString("0.00")</td>
                            </tr>
                            <tr class="fw-bold">
                                <th>Total:</th>
                                <td class="text-end">₹ @order.TotalPrice.ToString("0.00")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (order != null)
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Order Summary</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Payment Information</h6>
                        <p class="mb-1"><strong>Method:</strong> @order.PaymentMethod</p>
                        <p class="mb-1"><strong>Created:</strong> @order.CreationDate?.ToString("g")</p>
                        <p class="mb-1"><strong>Modified:</strong> @order.ModifyDate?.ToString("g")</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Notes</h6>
                        <p>@(string.IsNullOrEmpty(order.Notes) ? "No notes available" : order.Notes)</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .table th {
        white-space: nowrap;
    }

    .img-thumbnail {
        padding: 0.25rem;
    }
</style>