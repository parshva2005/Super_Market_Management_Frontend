@model List<Super_Market_Management.Models.Customer>
@{
    var activeCustomers = Model.Where(c => c.IsActive).ToList();
    var showToast = TempData["OperationSuccess"] != null && (bool)TempData["OperationSuccess"];
    var toastMessage = TempData["ToastMessage"] as string;
}

<main id="main" class="main">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-people-fill text-primary"></i> Customer Management
                </h1>
                <p class="text-muted mb-0">Showing @activeCustomers.Count active customers</p>
            </div>
            <div>
                <a asp-controller="Customer" asp-action="AddEditCustomer" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New Customer
                </a>
                <button class="btn btn-outline-secondary ms-2" data-bs-toggle="modal" data-bs-target="#importModal">
                    <i class="bi bi-upload"></i> Import
                </button>
            </div>
        </div>

        <!-- Customer Table -->
        <div class="card shadow">
            <div class="card-body">
                @if (!activeCustomers.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-people text-muted fs-1"></i>
                        <h4 class="mt-3">No Active Customers Found</h4>
                        <p class="text-muted">Click the button above to add your first customer</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="customersTable">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Address</th>
                                    <th>Registered</th>
                                    <th>Orders</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in activeCustomers)
                                {
                                    <tr>
                                        <td>@customer.CustomerId</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar me-3">
                                                    <span class="avatar-initial rounded-circle bg-primary text-white">
                                                        @customer.Name.Substring(0, 1)
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@customer.Name</h6>
                                                    <small class="text-muted">@customer.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <i class="bi bi-telephone me-2"></i>@customer.PhoneNumber
                                        </td>
                                        <td class="text-truncate" style="max-width: 200px;" title="@customer.Address">
                                            @customer.Address
                                        </td>
                                        <td>@customer.RegistrationDate.ToString("d MMM yyyy")</td>
                                        <td>
                                            <span class="badge bg-primary">@customer.Orders.Count</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="AddEditCustomer" asp-route-id="@customer.CustomerId"
                                                   class="btn btn-outline-primary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="GetCustomerById" asp-route-id="@customer.CustomerId"
                                                   class="btn btn-outline-info" title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button class="btn btn-outline-danger delete-btn"
                                                        data-id="@customer.CustomerId"
                                                        data-name="@customer.Name"
                                                        title="Deactivate">
                                                    <i class="bi bi-person-x"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

<!-- Deactivate Confirmation Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1" aria-labelledby="deactivateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deactivateModalLabel">Deactivate Customer</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deactivateModalText">Are you sure you want to deactivate this customer?</p>
                <div class="alert alert-warning mt-2">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Customer will no longer appear in active lists but their order history will be preserved.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="#" id="confirmDeactivateBtn" class="btn btn-danger">
                    <i class="bi bi-person-x me-1"></i> Deactivate
                </a>
            </div>
        </div>
    </div>
</main>

    <!-- Import Modal -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import Customers</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select File</label>
                        <input type="file" class="form-control" accept=".csv, .xlsx">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="overwriteExisting">
                        <label class="form-check-label" for="overwriteExisting">
                            Overwrite existing customers with matching email/phone
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Import</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
        <div id="operationToast" class="toast text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <span id="toastMessage">@toastMessage</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

@section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Initialize DataTable
                $('#customersTable').DataTable({
                    responsive: true,
                    columnDefs: [
                        { orderable: false, targets: [6] } // Disable sorting on actions column
                    ]
                });

                // Deactivate Confirmation
                $('.delete-btn').click(function() {
                    const customerId = $(this).data('id');
                    const customerName = $(this).data('name');

                    $('#deactivateModalText').html(`Are you sure you want to deactivate <strong>${customerName}</strong>?`);
                    $('#confirmDeactivateBtn').attr('href', `/Customer/Deactivate/${customerId}`);

                    new bootstrap.Modal(document.getElementById('deactivateModal')).show();
                });

                // Toast Notification
                const toastEl = document.getElementById("operationToast");
                if (toastEl && '@showToast' === 'True') {
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();

                    setTimeout(() => {
                        toast.hide();
                    }, 5000);
                }
            });
        </script>
}
