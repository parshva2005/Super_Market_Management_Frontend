@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "_LayoutCustomer";
}

<div class="container mt-4">
    <div class="text-center py-5">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        <h1 class="mt-3">Order Confirmed!</h1>
        <p class="lead">Thank you for your purchase</p>

        <div class="card mt-4 mx-auto" style="max-width: 400px;">
            <div class="card-body">
                <h5>Order Details</h5>
                <p><strong>Order Number:</strong> @ViewBag.OrderNumber</p>
                <p><strong>Order ID:</strong> @ViewBag.OrderId</p>
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Product" asp-action="GetAllProductCustomer" class="btn btn-primary">
                <i class="bi bi-house"></i> Continue Shopping
            </a>
            <a asp-controller="Order" asp-action="Details" asp-route-id="@ViewBag.OrderId"
               class="btn btn-outline-secondary ms-2">
                <i class="bi bi-receipt"></i> View Order Details
            </a>
        </div>
    </div>
</div>