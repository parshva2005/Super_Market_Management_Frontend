@model Order
@{
    ViewData["Title"] = "Order Details";
    Layout = "_LayoutCustomer";
}

<div class="container mt-4">
    <h2 class="mb-4">Order Details - @Model.OrderNumber</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Order Items</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="row mb-3 border-bottom pb-3">
                            <div class="col-8">
                                <h6>@item.Product?.ProductName</h6>
                                <small class="text-muted">Quantity: @item.ProductQuantity</small>
                            </div>
                            <div class="col-4 text-end">
                                <strong>₹@item.QuantityWisePrice</strong>
                            </div>
                        </div>
                    }

                    <div class="row mt-3">
                        <div class="col-8">
                            <strong>Total:</strong>
                        </div>
                        <div class="col-4 text-end">
                            <strong class="text-primary">₹@Model.TotalPrice</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Order Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                    <p><strong>Customer:</strong> @Context.Session.GetString("UserName")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Orders</a>
    </div>
</div>