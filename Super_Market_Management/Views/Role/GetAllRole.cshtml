@model List<Super_Market_Management.Models.Role>
@{
    var activeRoles = Model.Where(r => r.IsRemove != true).ToList();
    var showToast = TempData["DeleteSuccess"] != null && (bool)TempData["DeleteSuccess"];
}

<main id="main" class="main">
    <div class="container-fluid">
        <div class="page-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-shield-lock text-primary"></i> Role Management
                </h1>
                <p class="text-muted mb-0">Showing @activeRoles.Count active roles</p>
            </div>
            <div>
                <a asp-controller="Role" asp-action="AddEditRole" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New Role
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                @if (!activeRoles.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-shield text-muted fs-1"></i>
                        <h4 class="mt-3">No Roles Found</h4>
                        <p class="text-muted">Click the button above to add your first role</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Role Name</th>
                                    <th>Created On</th>
                                    <th>Last Modified</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in activeRoles)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">
                                                @role.RoleName
                                            </span>
                                        </td>
                                        <td>@role.CreationDate?.ToString("d")</td>
                                        <td>@role.ModifyDate?.ToString("d")</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-action="AddEditRole" asp-route-id="@role.RoleId"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger delete-btn"
                                                        data-id="@role.RoleId"
                                                        data-name="@role.RoleName">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Role Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="roleNameText"></strong>?</p>
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    This action will affect all users assigned to this role.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
@if (showToast)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="deleteToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    Role deleted successfully!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Delete confirmation modal
            $('.delete-btn').click(function() {
                const roleId = $(this).data('id');
                const roleName = $(this).data('name');

                $('#roleNameText').text(roleName);
                $('#confirmDeleteBtn').attr('href', `/Role/DeleteRole/${roleId}`);

                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });

            // Auto-hide toast after 5 seconds
            if (@showToast.ToString().ToLower()) {
                const toast = new bootstrap.Toast(document.getElementById('deleteToast'));
                toast.show();

                setTimeout(() => {
                    toast.hide();
                }, 5000);
            }
        });
    </script>
}