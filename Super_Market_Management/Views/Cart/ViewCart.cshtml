@model List<Cart>
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_LayoutCustomer";

    // Calculate totals
    decimal cartTotal = Model?.Sum(item => item.ProductQuantity * (item.Product?.ProductPrice ?? 0)) ?? 0;
    decimal taxAmount = cartTotal * 0.18m;
    decimal finalTotal = cartTotal + taxAmount;
    int totalItems = Model?.Sum(item => item.ProductQuantity) ?? 0;
    int totalProducts = Model?.Count ?? 0;
}

<div class="container mt-4">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Your cart is empty</h4>
            <p class="text-muted">Start shopping to add items to your cart</p>
            <a asp-controller="Product" asp-action="GetAllProductCustomer" class="btn btn-primary">
                Continue Shopping
            </a>
        </div>
    }
    else
    {
        <form id="buyNowForm" asp-controller="Order" asp-action="ProcessBuyNow" method="post">
            <input type="hidden" name="CustomerId" value="1" />
            <input type="hidden" name="TotalAmount" value="@finalTotal" />
            <input type="hidden" name="TaxAmount" value="@taxAmount" />
            <input type="hidden" name="DiscountAmount" value="0" />

            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" name="Items[@i].ProductId" value="@Model[i].ProductId" />
                <input type="hidden" name="Items[@i].Quantity" value="@Model[i].ProductQuantity" />
                <input type="hidden" name="Items[@i].Price" value="@Model[i].Product.ProductPrice" />
            }

            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                Cart Items
                                <span class="badge bg-primary">@totalProducts products, @totalItems items</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                var itemTotal = item.ProductQuantity * (item.Product?.ProductPrice ?? 0);

                                <div class="cart-item border-bottom pb-3 mb-3">
                                    <div class="row align-items-center">
                                        <div class="col-3 col-md-2">
                                            @if (!string.IsNullOrEmpty(item.Product?.ProductImage1))
                                            {
                                                <img src="@item.Product.ProductImage1"
                                                     class="img-fluid rounded"
                                                     alt="@item.Product?.ProductName"
                                                     style="max-height: 80px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                     style="width: 80px; height: 80px;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-9 col-md-4">
                                            <h6 class="mb-1">@item.Product?.ProductName</h6>
                                            <small class="text-muted">@item.Product?.Category?.CategoryName</small>
                                            <div class="mt-1">
                                                <small class="text-success fw-bold">₹@(item.Product?.ProductPrice ?? 0) each</small>
                                            </div>
                                        </div>
                                        <div class="col-6 col-md-2">
                                            <div class="input-group input-group-sm">
                                                <button class="btn btn-outline-secondary decrease-quantity"
                                                        type="button"
                                                        data-cart-id="@item.CartId"
                                                        data-current-quantity="@item.ProductQuantity">
                                                    -
                                                </button>
                                                <input type="number" class="form-control text-center quantity-input"
                                                       value="@item.ProductQuantity" min="1" max="100"
                                                       data-cart-id="@item.CartId"
                                                       readonly>
                                                <button class="btn btn-outline-secondary increase-quantity"
                                                        type="button"
                                                        data-cart-id="@item.CartId"
                                                        data-current-quantity="@item.ProductQuantity"
                                                        data-max-stock="@item.Product?.ProductStock">
                                                    +
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-3 col-md-2 text-center">
                                            <span class="fw-bold text-primary">₹@itemTotal</span>
                                        </div>
                                        <div class="col-3 col-md-2 text-end">
                                            <button class="btn btn-sm btn-outline-danger remove-item"
                                                    data-cart-id="@item.CartId"
                                                    title="Remove item">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Continue Shopping Button -->
                    <div class="mt-3">
                        <a asp-controller="Product" asp-action="GetAllProductCustomer" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-4">
                    <div class="card sticky-top" style="top: 20px;">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal (@totalItems items):</span>
                                <span>₹@cartTotal</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (18%):</span>
                                <span>₹@taxAmount</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total Amount:</strong>
                                <strong class="text-primary">₹@finalTotal</strong>
                            </div>

                            <!-- Buy Now Button -->
                            <div class="d-grid gap-2">
                                <button type="button" id="buyNowBtn" class="btn btn-success btn-lg">
                                    <i class="bi bi-lightning"></i> Buy Now
                                </button>
                            </div>

                            <!-- Security Badges -->
                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-shield-check text-success"></i>
                                    Secure transaction
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Purchase</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to complete this purchase? This will:</p>
                <ul>
                    <li>Create an order with all items in your cart</li>
                    <li>Update product stock levels</li>
                    <li>Remove items from your cart</li>
                </ul>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Note: This is a direct purchase without payment processing.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmBuyNow">Confirm Purchase</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-success text-white">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong class="me-auto">Success</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Your order has been placed successfully!
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Quantity increase
            $('.increase-quantity').click(function() {
                const cartId = $(this).data('cart-id');
                const currentQuantity = $(this).data('current-quantity');
                const maxStock = $(this).data('max-stock');
                const newQuantity = currentQuantity + 1;

                if (maxStock && newQuantity > maxStock) {
                    alert('Only ' + maxStock + ' items available in stock');
                    return;
                }

                updateQuantity(cartId, newQuantity);
            });

            // Quantity decrease
            $('.decrease-quantity').click(function() {
                const cartId = $(this).data('cart-id');
                const currentQuantity = $(this).data('current-quantity');

                if (currentQuantity > 1) {
                    updateQuantity(cartId, currentQuantity - 1);
                }
            });

            // Update quantity function
            function updateQuantity(cartId, quantity) {
                $.post('/Cart/UpdateCartQuantity', {
                    cartId: cartId,
                    quantity: quantity
                }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                        location.reload();
                    }
                }).fail(function() {
                    alert('Network error. Please try again.');
                    location.reload();
                });
            }

            // Remove item
            $('.remove-item').click(function() {
                const cartId = $(this).data('cart-id');

                if (confirm('Are you sure you want to remove this item from your cart?')) {
                    $(this).prop('disabled', true);

                    $.post('/Cart/RemoveFromCart', { cartId: cartId }, function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    }).fail(function() {
                        alert('Network error. Please try again.');
                    location.reload();
                    $(this).prop('disabled', false);
                    });
                }
            });

            // Buy Now functionality
            $('#buyNowBtn').click(function() {
                $('#confirmationModal').modal('show');
            });

            $('#confirmBuyNow').click(function() {
                $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status"></span> Processing...');

                // Submit the form
                $('#buyNowForm').submit();
            });

            // Show toast if order was successful
            @if (TempData["OrderSuccess"] != null)
            {
                    <text>
                    var toast = new bootstrap.Toast(document.getElementById('successToast'));
                    toast.show();

                    // Redirect after a delay
                    setTimeout(function() {
                        window.location.href = '@Url.Action("Index", "Order")';
                    }, 2000);
                    </text>
            }
        });
    </script>
}