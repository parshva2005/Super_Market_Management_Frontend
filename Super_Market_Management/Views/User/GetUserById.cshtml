@model Super_Market_Management.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
    var showToast = TempData["OperationSuccess"] != null && (bool)TempData["OperationSuccess"];
    var toastMessage = TempData["ToastMessage"] as string;
}

<main id="main" class="main mt-2">
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Customer Details Column -->
            <div class="col-md-8">
                <!-- Customer Information Card -->
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Customer Information</h5>
                            <div>
                                <a asp-action="AddEditCustomer" asp-route-id="@Model.CustomerId"
                                   class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#deactivateModal">
                                    <i class="bi bi-person-x"></i> Deactivate
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted">Full Name</label>
                                    <p class="form-control-plaintext">@Model.Name</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Email</label>
                                    <p class="form-control-plaintext">@(Model.Email ?? "Not provided")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted">Phone Number</label>
                                    <p class="form-control-plaintext">@Model.PhoneNumber</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Address</label>
                                    <p class="form-control-plaintext">@(Model.Address ?? "Not provided")</p>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted">Registration Date</label>
                                    <p class="form-control-plaintext">@Model.RegistrationDate.ToString("d MMM yyyy")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted">Status</label>
                                    <p>
                                        <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                                            @(Model.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Orders Card -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Order History</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Orders.Any())
                        {
                            <div class="text-center py-3">
                                <i class="bi bi-cart-x text-muted fs-1"></i>
                                <h5 class="mt-3">No Orders Found</h5>
                                <p class="text-muted">This customer hasn't placed any orders yet</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Order #</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                                        {
                                            <tr>
                                                <td>@order.OrderNumber</td>
                                                <td>@order.OrderDate.ToString("d MMM yyyy")</td>
                                                <td>@order.OrderItems.Count</td>
                                                <td>@order.TotalPrice.ToString("C")</td>
                                                <td>
                                                    <span class="badge bg-@(order.Status == "Completed" ? "success" : "warning")">
                                                        @order.Status
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.OrderId"
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Customer Summary Column -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="avatar avatar-xl position-relative mb-3">
                            <span class="avatar-initial rounded-circle bg-primary text-white fs-3">
                                @Model.Name.Substring(0, 1)
                            </span>
                        </div>
                        <h4>@Model.Name</h4>
                        <p class="text-muted mb-4">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                <i class="bi bi-geo-alt-fill me-2"></i>
                                @Model.Address
                            }
                        </p>

                        <div class="d-flex justify-content-around mb-4">
                            <div>
                                <h5 class="mb-0">@Model.Orders.Count</h5>
                                <small class="text-muted">Orders</small>
                            </div>
                            <div>
                                <h5 class="mb-0">@Model.Orders.Sum(o => o.TotalPrice).ToString("C")</h5>
                                <small class="text-muted">Total Spent</small>
                            </div>
                        </div>

                        <hr class="my-3">

                        <div class="text-start">
                            <h6 class="mb-3">Contact Information</h6>
                            <p class="mb-2">
                                <i class="bi bi-envelope me-2"></i>
                                @(Model.Email ?? "Not provided")
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-telephone me-2"></i>
                                @Model.PhoneNumber
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-calendar me-2"></i>
                                Member since @Model.RegistrationDate.ToString("MMMM yyyy")
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-@(Model.IsActive ? "check-circle" : "x-circle") me-2"></i>
                                Account @(Model.IsActive ? "Active" : "Inactive")
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions Card -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <a href="#" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-cart-plus me-2"></i> Create New Order
                        </a>
                        <a href="mailto:@Model.Email" class="btn btn-outline-secondary w-100 mb-2"
                           @(string.IsNullOrEmpty(Model.Email) ? "disabled" : "")>
                            <i class="bi bi-envelope me-2"></i> Send Email
                        </a>
                        <a href="tel:@Model.PhoneNumber" class="btn btn-outline-success w-100">
                            <i class="bi bi-telephone me-2"></i> Call Customer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Deactivate Confirmation Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Deactivate Customer</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to deactivate @Model.Name?</p>
                <div class="alert alert-warning mt-2">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    This will prevent the customer from appearing in active lists but preserve their order history.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a asp-action="Deactivate" asp-route-id="@Model.CustomerId" class="btn btn-danger">
                    <i class="bi bi-person-x me-1"></i> Confirm Deactivate
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
    <div id="operationToast" class="toast text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i>
                <span id="toastMessage">@toastMessage</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Toast Notification
            const toastEl = document.getElementById("operationToast");
            if (toastEl && '@showToast' === 'True') {
                const toast = new bootstrap.Toast(toastEl);
                toast.show();

                setTimeout(() => {
                    toast.hide();
                }, 5000);
            }
        });
    </script>
}