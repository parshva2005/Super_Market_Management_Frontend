@model List<Super_Market_Management.Models.User>
@{
    var activeUsers = Model.Where(u => u.IsActive == true).ToList();
    var showToast = TempData["DeleteSuccess"] != null && (bool)TempData["DeleteSuccess"];
    var role = TempData["role"];
}

<main id="main" class="main">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-people-fill text-primary"></i> @role Management
                </h1>
                <p class="text-muted mb-0">Showing @activeUsers.Count active users</p>
            </div>
            <div>
                <a asp-controller="User" asp-action="AddEditUser" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New @role
                </a>
            </div>
        </div>

        <!-- User Cards -->
        <div class="row g-4">
            @if (!activeUsers.Any())
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-people text-muted fs-1"></i>
                            <h4 class="mt-3">No Active Users Found</h4>
                            <p class="text-muted">Click the button above to add your first user</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @foreach (var user in activeUsers)
                {
                    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                        <div class="card user-card h-100 shadow-sm">
                            <div class="card-body">
                                <!-- User Header -->
                                <div class="d-flex align-items-center mb-3">
                                    <div class="user-avatar me-3">
                                        <i class="bi bi-person-circle fs-2 text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-0">@user.UserName</h5>
                                        <span class="badge bg-@(user.RoleId == 1 ? "primary" : "secondary")">
                                            @user.Role?.RoleName
                                        </span>
                                    </div>
                                </div>

                                <!-- User Details -->
                                <ul class="list-group list-group-flush mb-3">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-envelope me-2"></i> Email</span>
                                        <span class="text-truncate" style="max-width: 150px;" title="@user.UserEmailAddress">
                                            @user.UserEmailAddress
                                        </span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-telephone me-2"></i> Phone</span>
                                        <span>@user.UserMobileNumber</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-calendar me-2"></i> Created</span>
                                        <span>@user.CreationDate?.ToString("d MMM yyyy")</span>
                                    </li>
                                    @if (user.LastLoginDate.HasValue)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="bi bi-clock-history me-2"></i> Last Login</span>
                                            <span>@user.LastLoginDate?.ToString("g")</span>
                                        </li>
                                    }
                                </ul>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="GetUserById" asp-route-id="@user.UserId"
                                       class="btn btn-sm btn-outline-primary me-md-2">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="AddEditUser" asp-route-id="@user.UserId"
                                       class="btn btn-sm btn-outline-primary me-md-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    @* @if (user.UserId != currentUserId)
                                    {
                                        <button class="btn btn-sm btn-outline-danger delete-btn"
                                                data-id="@user.UserId"
                                                data-name="@user.UserName">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled
                                                title="You cannot delete your own account">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    } *@
                                    <button class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@user.UserId"
                                            data-name="@user.UserName">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</main>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm User Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="userNameText"></strong>?</p>
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    This action will permanently remove the user account and cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Success Toast -->
@if (showToast)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="deleteToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    User deleted successfully!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}


@section Scripts {
    <script>
        $(document).ready(function() {
            // Delete confirmation modal
            $('.delete-btn').click(function() {
                const userId = $(this).data('id');
                const userName = $(this).data('name');

                $('#userNameText').text(userName);
                $('#confirmDeleteBtn').attr('href', `/User/DeleteUser/${userId}`);

                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });

            // Auto-hide toast after 5 seconds
            if (@showToast.ToString().ToLower()) {
                const toast = new bootstrap.Toast(document.getElementById('deleteToast'));
                toast.show();

                setTimeout(() => {
                    toast.hide();
                }, 5000);
            }
        });
    </script>
}